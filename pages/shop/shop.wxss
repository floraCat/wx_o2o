@import "../../style/common.wxss";
@import "../../style/layout.wxss";
@import "../../style/cart.wxss";



.xmShop {
	background: #fff;
}
.xmShop .xmSearch {
	padding-left: 90rpx;
}
.xmShop .xmSearch .submit {
	left: 96rpx;
}
.xmShop .xmSearch .keyword {
	width: 500rpx;
}
.xmShop .mask {
	z-index: 2;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 50%;
	background: #333;
	opacity: .3;
}
.xmShop .xmHead {
	background: transparent;
}
.xmShop .xmSearch .txt {
	color: #fff;
}
.xmShop .xmRule2 .main{
	box-shadow: #333 0 0 30rpx;
}
.xmShop .xmClose {
	top: -8rpx;
}

.maskBg {
	position: fixed;
	z-index: 1;
	right: 13%;
	top: -32rpx;
	width: 250rpx;
	height: 250rpx;
	opacity: .3;
}
.maskBg image {
	position: absolute;   
	width: 100%;
	height: 100%;
    -webkit-filter: blur(10rpx);
       -moz-filter: blur(10rpx);
        -ms-filter: blur(10rpx);   
            filter: blur(10rpx);
    -webkit-backdrop-filter: blur(10rpx); 
}


/*商品信息*/
.shopInfo {
	padding: 28rpx;
	position: relative;
	height: 160rpx;
	z-index: 90;
}
.shopInfo .img {
	position: absolute;
	top: 28rpx;
	left: 28rpx;
	width: 160rpx;
	height: 160rpx;
	background: #eee;
}
.shopInfo .img image {
	width: 160rpx;
	height: 160rpx;
}
.shopInfo .info {
	padding-left: 188rpx;
	font-size: 24rpx;
}
.shopInfo .info view {
	color: #fff;
}
.shopInfo .info .h4 {
	font-size: 32rpx;
	font-weight: bold;
}
