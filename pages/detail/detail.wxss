@import "../../style/common.wxss";
@import "../../style/cart.wxss";
@import "../../style/pop.wxss";

.bigImg {
	position: relative;
	overflow: hidden;
}
.bigImg .img {
	width: 750rpx;
	height: 750rpx;
}
.bigImg .img image {
	width: 100%;
	height: 100%;
}	
.bigImg .price {
	z-index: 9;
	position: absolute;
	bottom: 72rpx;
	right: 0;
}
.bigImg .price .bg {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #44A0FF;
	opacity: .8;
}
.bigImg .price .p {
	position: relative;
	z-index: 2;
	width: 280rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 28rpx;
	color: #fff;
}
.bigImg .price .span {
	display: inline;
	font-size: 36rpx;
	color: #fff;
}
.bigImg .price .em {
	display: inline;
	font-size: 44rpx; 
	margin-right: 9.6rpx;
	color: #fff;
}
.bigImg .price .s {
	display: inline;
	text-decoration: none;
	color: #fff;
}


.detailMain {
	position: relative;
	color: #666;
	padding: 36rpx 50rpx 192rpx;
}
.detailMain .shop {
	overflow: hidden;
	padding: 0 0 20rpx;
}
.detailMain .shop .link {
	color: #333;
}
.detailMain .shop .p {
	line-height: 60rpx;
}
.detailMain .shop image {
	float: left;
	width: 60rpx;
	height: 60rpx;
	margin-right: 16rpx;
	border-radius: 50%;
}
.detailMain .ttl {
	font-size: 44rpx;
	line-height: 60rpx;
	color: #333;
	margin-bottom: 8rpx;
}
.detailMain .info {
	color: #000;
	font-size: 24rpx;
	line-height: 34rpx;
}
.detailMain .info .span {
	display: inline;
	margin-right: 24rpx;
	font-size: 24rpx;
	color: #aaa;
}
.detailMain .content {
	padding-top: 30rpx;
	line-height: 48rpx;
	font-size: 32rpx;
	color: #8E8E93;
}
.detailMain .handles {
	position: absolute;
	top: 110rpx;
	right: 52rpx;
}
.detailMain .noNum {
	padding: 0 20rpx;
	height: 52rpx;
	line-height: 52rpx;
	background: #ccc;
	color: #fff;
	border-radius: 8rpx;
}
