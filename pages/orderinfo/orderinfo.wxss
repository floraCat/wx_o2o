@import "/style/common.wxss";
@import "/style/layout.wxss";
@import "/style/order.wxss";
@import "/style/pop.wxss";


.xmOrderInfo .content {
    padding-bottom: 60rpx;
  }
.xmOrderInfo .xmOrderList {
    margin-bottom: 16rpx;
  }
.xmOrderInfo .handles {
  background: #fff;
  padding: 24rpx 0 10rpx;
  text-align: center;
  border-bottom: #ddd 2rpx solid;
  margin: 0 0 16rpx;
}
.xmOrderInfo .handles ._icon {
  position: relative;
  font-size: 160rpx;
  line-height: 120rpx;
  height: 120rpx;
}
.xmOrderInfo .handles ._icon.pay_no {
  line-height: 160rpx;
  height: 160rpx;
}
.xmOrderInfo .handles .p {
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  padding: 0 0 20rpx;
}
.xmOrderInfo .handles .h2 {
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  padding: 20rpx 0 20rpx;
}
.xmOrderInfo .handles .btns {
  display: flex;
  padding: 0 116rpx;
  margin: 0 auto;
}
.xmOrderInfo .handles .li {
  border-bottom: none;
  padding: 0;
  flex: 1;
}
.xmOrderInfo .handles .xmBtn {
  text-align: center;
}
.xmOrderInfo .xmOrderList {
  border-top: #E1E1E1 2rpx solid;
}
.xmOrderInfo .sender .tel {
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.xmOrderInfo .sender .i {
  font-size: 52rpx;
}
.xmOrderInfo .others {
  background: #fff;
  padding: 36rpx 40rpx 12rpx;
  border-top: #E1E1E1 2rpx solid;
  border-bottom: #E1E1E1 2rpx solid;
  margin-bottom: 16rpx;
}
.xmOrderInfo .others .li0 {
  overflow: hidden;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 24rpx;
}
.xmOrderInfo .others .li2 {
  padding-left: 152rpx;
}
.xmOrderInfo .others .label {
  float: left;
  margin-right: 40rpx;
}
.xmOrderInfo .others .p {
  float: left;
  color: #9B9B9B;
}
.xmOrderInfo .others .span {
  color: #9B9B9B;
}
.xmOrderInfo .hotline {
  background: #fff;
  font-size: 28rpx;
  border-top: #E1E1E1 2rpx solid;
  border-bottom: #E1E1E1 2rpx solid;
}
.xmOrderInfo .hotline .span {
  display: inline;
}
.xmOrderInfo .hotline .em {
  display: inline;
  color: #44A0FF;
  margin-left: 40rpx;
}
