	right: 40rpx;
}
.colLayout ._tel {
	padding-right: 40rpx;
}
.colLayout ._tel .i { 
	position: absolute;
	top: 0;
	right: 0;
}

/*弹窗*/
.popWin {
	z-index: 1000;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.popWin .main {
	z-index: 999;
	position: absolute;
	top: 22%;
	left: 50%;
	margin-left: -286rpx;
	width: 572rpx;
	padding: 0 0 36rpx;
	background: #fff;
	text-align: center;
	border-radius: 26rpx;
}
.popWin .img {
	position: relative;
	width: 100%;
	height: 282rpx;
	margin-bottom: 42rpx;
	border-top-left-radius: 26rpx;
	border-top-right-radius: 26rpx;
	overflow: hidden;
	-webkit-transform:rotate(0deg)
}
.popWin .img .image {
	width: 100%;
	position: relative;
	top: -70rpx;
}
.popWin .p {
	font-size: 28rpx;
}
.popWin .em {
	display: block;
	font-size: 72rpx;
	line-height: 100rpx;
}
.popWin .span {
	display: block;
	line-height: 40rpx;
	color: $emCol;
	font-size: 22rpx;
	margin-bottom: 36rpx;
}
.popWin .btn {
	display: block;
	width: 360rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #44A0FF;
	color: #fff;
	text-align: center;
	margin: 0 auto;
	border-radius: 30rpx;
}

.popCancel .ol {
	padding: 4rpx 0 30rpx;
}
.popCancel .p {
	font-size: 36rpx!important;
	line-height: 48rpx;
}
.popCancel .btn {
	background: #fff!important;
	border: #4A4A4A 2rpx solid;
	color: #4A4A4A!important;
	font-size: 28rpx;
}
