/*列表*/
.xmOrderList .hd {
	background: #fff;
}
.xmOrderList .item {
	background: #fff;
	border-bottom: #E1E1E1 2rpx solid;
}
.xmOrderList .item .li {
	border-bottom: none!important;
}
.xmOrderList .main {
	border-bottom: #D8D8D8 2rpx solid;
	margin: 0 40rpx;
}
.xmOrderList .main.noLine {
	border-bottom: none!important;
	margin-bottom: 30rpx;
}
.xmOrderList .main .link {
	color: #4A4A4A;
}
.xmOrderList .main .li {
	position: relative;
	overflow: hidden;
	margin-bottom: 24rpx;
	padding: 0;
}
.xmOrderList .main .lt {
	position: relative;
	float: left;
	margin-right: 40rpx;
	width: 96rpx;
	height: 96rpx;
	line-height: 96rpx;
	border: #eee 1px solid;
	overflow: hidden;
}
.xmOrderList .main .lt image {
	width: 96rpx;
	height: 96rpx;
	margin-top: -2rpx;
	vertical-align: middle;
}
.xmOrderList .main .cen {
	float: left;
	width: 350rpx;
}
xmOrderList .main .cen .ttl {
	line-height: 100rpx;
}
.xmOrderList .main .h4 {
	color: #333;
	font-size: 28rpx;
	line-height: 100rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.xmOrderList .main .right {
	position: absolute;
	top: 0;
	right: 0;
	width: 200rpx;
	font-size: 28rpx;
	text-align: right;
}
.xmOrderList .main .right .span {
	display: inline;
	color: #9B9B9B;
	line-height: 100rpx;
}
.xmOrderList .main .right .em {
	display: inline;
	margin-left: 40rpx;
	line-height: 100rpx;
}
.xmOrderList .foot {
	text-align: right;
	line-height: 40rpx;
	padding: 0 40rpx;
	margin-bottom: 30rpx;
	overflow: hidden;
}
.xmOrderList .foot .fl .span {
	display: inline;
	margin-left: 40rpx;
	margin-left: 0;
	margin-right: 8rpx;
}
.xmOrderList .foot .span {
	display: inline;
	margin-left: 40rpx;
	color: #999;
	font-size: 24rpx;
	margin-left: 8rpx;
}
.xmOrderList .foot .em {
	display: inline;
	margin-left: 40rpx;
	font-size: 28rpx;
	color: #4A4A4A;
}
.xmOrderList .foot3 {
	line-height: 40rpx;
	padding: 0 40rpx;
	padding-bottom: 30rpx;
	overflow: hidden;
	border-bottom: #E1E1E1 2rpx solid;
}
.xmOrderList .foot3 .em {
	display: inline;
	margin-left: 40rpx;
	color: #44A0FF;
}
.xmOrderList .btns {
	padding: 20rpx 30rpx;
	border-top: #E1E1E1 2rpx solid;
	overflow: hidden;
}
.xmOrderList .btns .xmBtn {
	float: right;
	margin-left: 12rpx;
}
.xmOrderList .info {
	font-size: 28rpx;
	line-height: 40rpx;
	padding: 32rpx 40rpx;
	background: #fff;
}
.xmOrderList .info .p {
	overflow: hidden;
	margin-bottom: 24rpx;
}
.xmOrderList .info .p:last-child {
	margin-bottom: 0;
}
.xmOrderList .info .span {
	color: #9B9B9B; 
}
.xmOrderList .info2 {
	height: 100rpx;
	line-height: 100rpx;
	padding: 0 40rpx;
	color: #aaa;
	font-size: 24rpx;
	text-align: right;
	overflow: hidden;
}


