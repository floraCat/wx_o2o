page {
  background-color: #d5e4f2;
}
.cl:after,.clearfix:after{content:".";display:block;height:0;clear:both;visibility:hidden}.cl,.clearfix{zoom:1}
.main {
  padding: 8% 12%;
  position: relative;
}

.main-title {
  font-size: 40rpx;
  font-weight: bold;
  width: 70%;
  text-align: center;
  margin: 0 auto 60rpx;
  padding-bottom: 20rpx;
  color: #555;
  border-bottom: #3a71a3 1px solid;
}

.bg-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60%;
  opacity: 0.5;
}

.bg-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  opacity: 0.5;
}

.way-title {
  font-size: 38rpx;
  color: #3a71a3;
  font-weight: normal;
  text-shadow: #fff 1px 1px 1px;
}

.explain {
  font-size: 30rpx;
  color: #809db9;
  background: #dfeaf5;
  line-height: 40rpx;
  box-shadow: #aec6dc 0 1px 8px;
  text-shadow: #fff 1px 1px 1px;
  border-radius: 5rpx;
  padding: 10rpx;
}

.explain text {
  font-weight: bold;
}

.copyright {
  text-align: center;
  color: #666;
  font-size: 28rpx;
  text-shadow: #fff 1px 1px 1px;
  margin-top: 150rpx;
}

.copyright .logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.copyright .txt {
  margin-top: 15rpx;
}

.mask{
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: #000;
  opacity: 0.5;
  display: none;
}